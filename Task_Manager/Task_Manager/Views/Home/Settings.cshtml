
@{
    ViewData["Title"] = "Settings";
}
@model Task_Manager.Models.DtoModelSetings;
<h2>Settings</h2>

<a asp-action="AddChild" asp-controller="Settings">Добавить ребёнка</a><br />

@foreach (var child in Model.Childs)
{
    <h4>@child.ChildName  @child.ChildSurName</h4>
    <a asp-area="" asp-controller="Settings" asp-action="EditChild" asp-route-childId="@child.ChildId"> Редактировать ребёнка </a>
    <a asp-area="" asp-controller="Settings" asp-action="DeleteChild" asp-route-childId="@child.ChildId"> | Удалить ребёнка </a>
    <a asp-area="" asp-controller="Settings" asp-action="AddTask" asp-route-childId="@child.ChildId"> | Добавить задание для ребёнка</a>

    @foreach (var item in child.taskElements)
    {
        <h5>@item.TaskName</h5>
        <a asp-area="" asp-controller="Settings" asp-action="EditTask" asp-route-taskId="@item.TaskElementId"> Редактировать занятие </a>
        <a asp-area="" asp-controller="Settings" asp-action="DeleteTask" asp-route-taskId="@item.TaskElementId"> | Удалить занятие  </a>
    }

}