
@{
    ViewData["Title"] = "Settings";
}

<h2>Settings</h2>

<a asp-action="AddChild" asp-controller="Settings">Добавить ребёнка</a><br />

@foreach (var item in ViewData["list"] as List<Child>)
{
    <a asp-controller="Settings" asp-action="AddTask" asp-route-childId="@item.ChildId"> Добавить задание для @item.Name @item.Surname</a><br /><br />
}